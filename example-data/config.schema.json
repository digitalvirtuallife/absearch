{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://mozilla.com/schemas/absearch.json",
  "type": "object",
  "properties": {
    "v": {
      "type": "integer"
    },
    "excludedDistributionIDPrefixes": {
      "type": "array"
    },
    "locales": {
      "type": "object",
      "properties": {
        "en-US": { "$ref": "#/definitions/localeRef" },
        "fr-FR": { "$ref": "#/definitions/localeRef" },
        "de-DE": { "$ref": "#/definitions/localeRef" },
        "cs-CZ": { "$ref": "#/definitions/localeRef" }
      }
    }
  },
  "required": [
    "v",
    "excludedDistributionIDPrefixes",
    "locales"
  ],
  "definitions": {
    "searchEngineEnumRef": {
      "enum": ["Yahoo", "Yahoo 搜尋", "Google", "Bing", "DDG",
               "Google1", "Google2", "Google3", "GoogleD"]
    },
    "optionBEnumRef": {
      "enum": ["fooBaz", "Baz"]
    },
    "defaultSettingsRef": {
      "type": "object",
      "properties": {
        "settings": {
          "type": "object",
          "properties": {
            "searchDefault": {
              "$ref": "#/definitions/searchEngineEnumRef"
            },
            "optionB": {
              "type": "array",
              "items": {"$ref": "#/definitions/optionBEnumRef" },
              "uniqueItems": true
            }

          }
        }
      }
    },
    "testRef": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "type": "object",
          "required": ["filters"],
          "properties": {
            "settings": {
              "type": "object",
              "properties": {
                "searchDefault": {
                  "$ref": "#/definitions/searchEngineEnumRef"
                },
                "optionB": {
                  "type": "array",
                  "items": {"$ref": "#/definitions/optionBEnumRef" },
                  "uniqueItems": true
                }
              }
            },
            "filters": {
              "type": "object",
              "required" : ["sampleRate"],
              "properties": {
                "sampleRate": { "type": "integer", "minimum": 1, "maximum": 100 },
                "maxSize": { "type": "integer", "minimum": 1 },
                "startTime": { "type": "integer" }
              }
            }
          }
        }
      }
    },
    "localeRef": {
      "type": "object",
      "required": [ "default" ],
      "patternProperties": {
        "^.*$": {
          "type": "object",
          "properties": {
            "default": { "$ref": "#/definitions/defaultSettingsRef" },
            "tests": { "$ref": "#/definitions/testRef" }
          }
        }
      },
      "properties": {
        "default": { "$ref": "#/definitions/defaultSettingsRef" }
      }
    }
  }
}
